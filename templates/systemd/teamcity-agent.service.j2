[Unit]
Description=TeamCity Build Agent
After=network.target

[Service]
Type=forking
PIDFile={{teamcity_install_dir}}/TeamCity/logs/buildAgent.pid
ExecStart={{teamcity_install_dir}}/TeamCity/bin/agent.sh start
ExecStop={{teamcity_install_dir}}/TeamCity/bin/agent.sh stop
User=teamcity

[Install]
WantedBy=multi-user.target
